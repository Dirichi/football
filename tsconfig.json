{
    "compilerOptions": {
      "baseUrl": ".",
      "esModuleInterop": true,
      "lib": [
        "esnext",
        "dom",
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "dist",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      },
      "sourceMap": true,
      "target": "es6"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/public"
    ]
  }
